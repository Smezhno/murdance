# DanceBot Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# Application Settings
# ============================================================================

# Application name (default: DanceBot)
APP_NAME=DanceBot

# Logging level (default: INFO)
LOG_LEVEL=INFO

# Test mode (CONTRACT ยง17): enables /debug endpoint and test commands (default: false)
TEST_MODE=false

# ============================================================================
# Telegram Configuration
# ============================================================================

# Telegram bot token (required)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram webhook secret token for signature verification (required)
TELEGRAM_SECRET_TOKEN=your_telegram_secret_token_here

# Admin Telegram chat ID for alerts and fallback notifications (required)
ADMIN_TELEGRAM_CHAT_ID=your_admin_telegram_chat_id_here

# ============================================================================
# WhatsApp Configuration (optional, for Phase 4)
# ============================================================================

# WhatsApp Cloud API key (optional)
WHATSAPP_API_KEY=

# WhatsApp webhook secret for signature verification (optional)
WHATSAPP_WEBHOOK_SECRET=

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL host (default: localhost)
POSTGRES_HOST=localhost

# PostgreSQL port (default: 5432)
POSTGRES_PORT=5432

# PostgreSQL user (default: dancebot)
POSTGRES_USER=dancebot

# PostgreSQL password (required)
POSTGRES_PASSWORD=changeme

# PostgreSQL database name (default: dancebot)
POSTGRES_DB=dancebot

# Redis host (default: localhost)
REDIS_HOST=localhost

# Redis port (default: 6379)
REDIS_PORT=6379

# Redis password (default: empty, but should be set in production)
REDIS_PASSWORD=changeme

# Redis database number (default: 0)
REDIS_DB=0

# ============================================================================
# LLM Configuration
# ============================================================================

# YandexGPT API key (required)
YANDEXGPT_API_KEY=your_yandexgpt_api_key_here

# YandexGPT folder ID (required)
# Format: b1g... (can be extracted from API key, but explicit is better)
YANDEXGPT_FOLDER_ID=your_yandexgpt_folder_id_here

# Anthropic Claude API key (optional fallback)
ANTHROPIC_API_KEY=

# ============================================================================
# CRM Configuration (Impulse CRM)
# ============================================================================

# Impulse CRM tenant name (required)
# Example: "studio"
CRM_TENANT=your_crm_tenant_here

# Impulse CRM API key for HTTP Basic auth (required)
CRM_API_KEY=your_crm_api_key_here

# ============================================================================
# Knowledge Base Configuration
# ============================================================================

# Path to knowledge base YAML file (default: knowledge/studio.yaml)
KB_FILE_PATH=knowledge/studio.yaml

# ============================================================================
# Session & Cache Configuration
# ============================================================================

# Session TTL in hours (default: 24)
SESSION_TTL_HOURS=24

# User profile TTL in days (default: 90)
USER_PROFILE_TTL_DAYS=90

# ============================================================================
# Timezone Configuration
# ============================================================================

# Timezone for datetime resolution (default: Asia/Vladivostok)
TIMEZONE=Asia/Vladivostok

# ============================================================================
# Budget Guard Limits (CONTRACT ยง12)
# ============================================================================

# Maximum tokens per hour (default: 100000)
MAX_TOKENS_PER_HOUR=100000

# Maximum cost per day in USD (default: 10.0)
MAX_COST_PER_DAY_USD=10.0

# Maximum requests per minute (default: 30)
MAX_REQUESTS_PER_MINUTE=30

# Maximum errors per hour (default: 50)
MAX_ERRORS_PER_HOUR=50

# ============================================================================
# Notes
# ============================================================================
# - All values marked as "required" must be set for the application to start
# - Optional values have defaults or can be left empty
# - Never commit .env file to git (it's in .gitignore)
# - Use Yandex Lockbox or similar secret management in production
